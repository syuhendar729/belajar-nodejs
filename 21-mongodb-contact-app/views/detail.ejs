<div class="container mt-3">
	<div class="row">
		<div class="col-md-8">

			<h2>Detail Contact</h2>

			<% if(!contact) { %>
				<div class="alert alert-danger fw-bold" role="alert">
					 Data contact tidak ada !<br>
					<a href="/contact" class="alert-link fw-normal">&laquo; kembali ke daftar contact</a>
				</div>
			<% } else { %>

				<div class="card gruvbox-abu" style="width: 18rem;">
				  <div class="card-body text-white">
					<h5 class="card-title"> <%= contact.nama %></h5>
					<h6 class="card-subtitle mb-2 text-muted"> <%= contact.notelp %></h6>
					<p class="card-text"> <%= contact.email %></p>
					<a href="/contact/edit/<%= contact.nama %>" class="btn btn-warning badge">ubah</a>
					<!-- <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Apakah anda ingin menghapus data ini?')">hapus</a> -->
					<form action="/contact?_method=DELETE" method="POST" class="d-inline">
						<input type="hidden" name="nama" value="<%= contact.nama %>" />
						<button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin akan menghapus?')">hapus</button>
					</form>
					<a href="/contact" class="card-link d-block mt-3">&laquo; kembali ke daftar contact</a>
				  </div>
				</div>

			<% } %>
		</div>
	</div>
</div>
