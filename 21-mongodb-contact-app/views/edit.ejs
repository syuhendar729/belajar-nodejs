<div class="container mt3">
	<div class="row">
		<div class="col-md-6">
			<h2>Form Edit Data Contact</h2>

			<% if (typeof errors != 'undefined'){ %>
				<div class="alert alert-danger" role="alert">
				  <ul>
					  <% errors.forEach(error => { %>
						<li> <%= error.msg %></li>
						<% }) %>
				  </ul>
				</div>	
			<% } %>

			<a href="/contact/<%= contact.nama %>" class="alert-link fw-normal">&laquo; kembali</a>
			<br>
			<br>
			
			<form method="post" action="/contact?_method=PUT">
				<input type="hidden" name="_id" value="<%= contact._id %>">
				<input type="hidden" name="oldnama" value="<%= contact.oldnama || contact.nama %>">
			  <div class="mb-3">
				<label for="nama" class="form-label">Nama</label>
				<input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
			  </div>
			  <div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>">
			  </div>
			  <div class="mb-3">
				<label for="notelp" class="form-label">Nomor HP</label>
				<input type="text" class="form-control" id="notelp" name="notelp" required value="<%= contact.notelp %>">
			  </div>
			  <button type="submit" class="btn btn-primary">Ubah</button>
			</form>

		</div>
	</div>
</div>


